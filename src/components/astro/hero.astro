---
import  {WaveTechBackground}  from "../react/waves";
import { GradientText, RotatingText, Squares } from "../react/react-bits";
import { ChevronDown } from "lucide-react";
import {motion} from 'framer-motion'
---

  <section
    id="inicio"
    class="relative flex flex-col items-center min-h-[calc(100vh-120px)] text-neutral-900 dark:text-neutral-100 px-6"
  >
    <div class="text-center z-10 space-y-6 text-neutral-900 font-inter mt-52 flex flex-col gap-4">
      <motion.p 
        client:visible
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8, ease: "easeOut" }}
        className="font-bold font-permanent text-5xl md:text-9xl text-shadow-2xs tracking-tight leading-tight italic text-neutral-900 dark:text-neutral-200"
      >
        relancio borges.
      </motion.p>

      <motion.p
        client:visible
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8, ease: "easeOut", delay: 0.2 }}
        className="font-inter italic text-2xl md:text-2xl font-light tracking-tight w-full dark:text-neutral-200"
      >
        engenheiro de computação, <span class="italic">dev fullstack</span> &<br />
        entusiasta de tecnologia
      </motion.p>

      <motion.p
        client:visible
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8, ease: "easeOut", delay: 0.4 }}
        className="text-neutral-800 font-inter italic dark:text-neutral-300 text-lg max-w-2xl mx-auto"
      >
        Transformo{" "}
        <GradientText
          client:load
          className="font-semibold inline"
          colors={["#737373", "#222", "#737373"]}
        >
          ideias
        </GradientText>{" "}
        em soluções digitais com um toque criativo e tecnologia de ponta.
      </motion.p>
    </div>
    <WaveTechBackground client:load/>
    <motion.div
      client:visible
      initial={{ opacity: 0, y: 20 }}
      animate={{ 
        opacity: 1, 
        y: [0, -20, 0, -10, 0],
        rotate: [0, 5, -5, 0]
      }}
      transition={{
        opacity: { duration: 0.8, delay: 0.6 },
        y: { duration: 2, repeat: Infinity, ease: "easeInOut", delay: 0.8 },
        rotate: { duration: 2, repeat: Infinity, ease: "easeInOut", delay: 0.8 }
      }} 
      className="absolute bottom-15"
    >
      <ChevronDown size={44}/>
    </motion.div>
  </section>

